<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/list_selector">
	
	 <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_border"
        android:orientation="vertical"
        android:padding="6dp" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="130dp"
	        android:background="@drawable/selectable_background_cardbank"
	        android:orientation="horizontal"
	        android:padding="6dp" >
        
	        <ImageView
	            android:id="@+id/stripe"
	            android:layout_width="5dp"
	            android:layout_height="125dp"
	            android:adjustViewBounds="true"
	            android:background="@color/Goldenrod"
	            android:baselineAlignBottom="true"
	            android:scaleType="centerCrop" />
			<FrameLayout 
		        android:id="@+id/contentThumbFrame"
		  		android:layout_width="125dp"
		        android:layout_height="125dp"
		  		android:background="@color/white">
		        <ImageView
		            android:id="@+id/contentThumb"
		    		android:layout_width="125dp"
		            android:layout_height="125dp"
		            android:adjustViewBounds="true"
		            android:layout_gravity="center_vertical|center_horizontal"
		            android:baselineAlignBottom="true"
		            android:scaleType="centerCrop"
		            android:background="@color/white" />
				<ImageView 
					android:id="@+id/playButton"
		  			android:layout_width="125dp"
		            android:layout_height="125dp"
					android:layout_gravity="center_vertical|center_horizontal"
				   	android:src="@drawable/ic_play"
				   	android:alpha="0.8"
				   	android:scaleType="centerCrop"
				   	android:visibility="gone"/>
					
				</FrameLayout>
	        <LinearLayout
	            android:id="@+id/contentLayout"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dip"
	            android:layout_weight="90"
	            android:orientation="vertical" >
	            <RelativeLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/selectable_background_cardbank"
		            android:layout_gravity="right">
				
		            <TextView
					    android:id="@+id/contentCatagory"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
				    	android:layout_gravity="center_vertical|center_horizontal"
					    android:textColor="@color/Goldenrod"
					    android:textSize="14sp"
					   	android:fontFamily="sans-serif-light"
					    android:paddingLeft="10dip"
					    android:layout_alignParentLeft="true"
					    android:singleLine="true" />
		            <ImageView
		                android:id="@+id/overflow"
		                android:layout_width="wrap_content"
		                android:layout_height="27dip"
		                android:layout_alignParentRight="true"
		                android:background="@drawable/selectable_background_cardbank"
		                android:paddingRight="-20dip"
		                android:paddingLeft="10dip"
		                android:visibility="gone"
		                android:src="@drawable/ic_menu_moreoverflow_normal_holo_light" />
		             <ImageView
		                android:id="@+id/star"
		                android:layout_width="27dip"
		                android:layout_height="27dip"
		                android:layout_alignParentRight="true"
		                android:src="@drawable/ic_fav_selected" />
	        	</RelativeLayout>
	            <TextView
	                android:id="@+id/contentTitle"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dip"
	                android:fontFamily="sans-serif"
	                android:maxLines="3"
	                android:textColor="@color/black"
	                android:textSize="15sp" />
	
	             <TextView
	                android:id="@+id/contentDesc"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dip"
	                android:ellipsize="end"
	                android:textColor="@color/black"
	                android:fontFamily="sans-serif"
	                android:maxLines="2"
	                android:textSize="10sp" />
	             <TextView
	                android:id="@+id/contentPublishedDate"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dip"
	                android:layout_marginBottom="0dip"
	                android:ellipsize="end"
	                android:layout_gravity="bottom"
	                android:textColor="@color/black"
	                android:fontFamily="sans-serif"
	                android:maxLines="1"
	                android:textSize="10sp" />
	        </LinearLayout>

        </LinearLayout>

	</LinearLayout>        
    

</RelativeLayout>
