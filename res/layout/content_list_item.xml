<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector">
    
    <FrameLayout 
        android:id="@+id/contentThumbFrame"
  		android:layout_width="120dp"
  		android:layout_height="190dp"
  		android:layout_marginRight="5dp"
  		android:background="@color/black">
    
	<ImageView 
	    android:id="@+id/contentThumb"
	    android:layout_width="120dp"
	    android:layout_height="190dp"
	    android:layout_gravity="center_vertical|center_horizontal"
	    android:background="@color/black"/>
	
	<ImageView 
	    android:id="@+id/playButton"
	    android:layout_width="120dp"
	    android:layout_height="190dp"
	    android:layout_gravity="center_vertical|center_horizontal"
   		android:src="@drawable/ic_play"
   		android:alpha="0.8"
   		android:visibility="gone"/>
	
	</FrameLayout>

	<TextView
	    android:id="@+id/contentTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dip"
	    android:layout_toLeftOf="@+id/star"
	    android:layout_toRightOf="@+id/contentThumbFrame"
	    android:textColor="#040404"
        android:typeface="sans"
        android:textSize="13sp"
        android:textStyle="bold"
        android:ellipsize="end"
	    android:maxLines="2" />
	
	<TextView
	    android:id="@+id/contentCatagory"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dip"
	    android:layout_below="@+id/contentTitle"
	    android:layout_toRightOf="@+id/contentThumbFrame" 
	    android:background="@color/DimGray"
	    android:singleLine="true" />
	
	<TextView
        android:id="@+id/contentDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentCatagory"
        android:textColor="#343434"
        android:textSize="10sp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/contentThumbFrame" 
        android:ellipsize="end"
        android:paddingRight="5dp"
        android:maxLines="2"/>
        
	<ImageView 
	    android:id="@+id/star"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fav_unselected"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"/>
	
</RelativeLayout>
