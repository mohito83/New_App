<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.isi.usaid.pifi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Pifistyle" >
        <activity
            android:name="edu.isi.usaid.pifi.ContentListActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"  >
            <!-- above code prevent onCreate being called when orientation changes -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                <activity
            android:name="edu.isi.usaid.pifi.ContentViewerActivity"
            android:label="@string/title_activity_content_viewer"
            android:parentActivityName="edu.isi.usaid.pifi.ContentListActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode" >
        </activity>
        <activity
            android:name="edu.isi.usaid.pifi.FullscreenVideoActivity"
            android:label="@string/title_activity_fullscreen_video"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode" >
        </activity>
        <service android:name="edu.isi.usaid.pifi.services.ConnectionService"/>
        <service android:name="edu.isi.usaid.pifi.services.ListenerService"
            android:process=":listener_process"/>
    </application>

</manifest>
